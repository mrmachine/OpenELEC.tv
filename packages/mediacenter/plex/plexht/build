. config/options $1

# xbmc fails to build with LTO optimization
  strip_lto

# dont use some optimizations because of build problems
  LDFLAGS=`echo $LDFLAGS | sed -e "s|-Wl,--as-needed||"`

# dont build parallel
# MAKEFLAGS=-j1

  export PYTHON_VERSION="2.7"
  export PYTHON_CPPFLAGS="-I$SYSROOT_PREFIX/usr/include/python$PYTHON_VERSION"
  export PYTHON_LDFLAGS="-L$SYSROOT_PREFIX/usr/lib/python$PYTHON_VERSION -lpython$PYTHON_VERSION"
  export PYTHON_SITE_PKG="$SYSROOT_PREFIX/usr/lib/python$PYTHON_VERSION/site-packages"
  export ac_python_version="$PYTHON_VERSION"

PLEX=$ROOT/$BUILD/$PKG_NAME-$PKG_VERSION

mkdir -p $PLEX/config
cd $PLEX/config
rm -rf *

cmake -DCMAKE_BUILD_TYPE=Debug \
      -DCMAKE_INCLUDE_PATH="$SYSROOT_PREFIX/usr/include;$SYSROOT_PREFIX/usr/include/python2.7" \
      -DCMAKE_INSTALL_PREFIX=$INSTALL/usr \
      -DCMAKE_TOOLCHAIN_FILE=$CMAKE_CONF \
      -DCOMPRESS_TEXTURES=off \
      -DENABLE_PYTHON=off \
      -DLIBUSBDIR=$SYSROOT_PREFIX/usr \
      -DOPTIONAL_INCLUDE_DIR=$SYSROOT_PREFIX/usr/include \
      -DRPI_EXTERNAL_PYTHON_HOME=$SYSROOT_PREFIX/usr \
      -DSWIG_DIR=$ROOT/$TOOLCHAIN \
      -DSWIG_EXECUTABLE=$ROOT/$TOOLCHAIN/bin/swig \
      $PLEX

make -j1
